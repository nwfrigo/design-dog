{
  "fontFamily": {
    "primary": "Fakt Pro",
    "fallback": "Inter, system-ui, -apple-system, sans-serif"
  },
  "fontWeights": {
    "blond": 200,
    "light": 300,
    "book": 350,
    "regular": 400,
    "medium": 500,
    "semibold": 600,
    "bold": 700
  },
  "defaults": {
    "headline": { "fontWeight": 300 },
    "subhead": { "fontWeight": 300 },
    "body": { "fontWeight": 300 },
    "cta": { "fontWeight": 300 },
    "eyebrow": { "fontWeight": 500 },
    "metadata": { "fontWeight": 500 }
  },
  "templates": {
    "websiteThumbnail": {
      "eyebrow": {
        "fontSize": 10,
        "fontWeight": 500,
        "letterSpacing": "1.1px",
        "textTransform": "uppercase"
      },
      "headline": {
        "fontSize": 34,
        "fontWeightLight": 300,
        "fontWeightHeavy": 600,
        "lineHeight": "40px"
      },
      "subhead": {
        "fontSize": 20,
        "fontWeight": 300,
        "lineHeight": 1.3
      },
      "body": {
        "fontSize": 14,
        "fontWeight": 300,
        "lineHeight": 1.5
      },
      "pill": {
        "fontSize": 10,
        "fontWeight": 500,
        "letterSpacing": "1.1px",
        "textTransform": "uppercase"
      }
    }
  }
}
